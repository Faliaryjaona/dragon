<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit List View to Modify it -->
        <record id="res_partner_list_view" model="ir.ui.view">
            <field name="name">res.partner.list.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='email']" position="after" >
                    <field name="nif" optional="show"/>
                    <field name="stat" optional="show"/>
                    <field name="rcs" optional="show"/>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="res_partner_form_view" model="ir.ui.view">
            <field name="name">res.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="nif" required='True'/>
                    <field name="stat" required='True' />
                    <field name="rcs" required='True'/>
                </xpath>

            </field>
        </record>

        <record id="res_partner_action" model="ir.actions.act_window">
            <field name="name">Professor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- actions -->
        <menuitem name="Professor" id="professor_base_menu_list" parent="student_base_menu" action="res_partner_action"/>


    </data>
</odoo>