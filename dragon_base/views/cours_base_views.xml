<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="cours_base_view_tree" model="ir.ui.view">
            <field name="name">cours.base.view.tree</field>
            <field name="model">cours.base</field>
            <field name="arch" type="xml">
                <tree string="_tree">
                    <field name="name" optional="show"/>
                    <field name="matiere" optional="show"/>
                    <field name="professor" optional="show"/>
                    <field name="niveau" optional="show"/>
                    <field name="class_cours" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="cours_base_view_form" model="ir.ui.view">
            <field name="name">cours.base.view.form</field>
            <field name="model">cours.base</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <sheet>
                        <group>
                        <group>
                            <field name="name"/>
                            <field name="matiere"/>
                            <field name="professor" />
                        </group>
                        <group>
                            <field name="niveau"/>
                            <field name="class_cours"/>
                        </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cours_base_action" model="ir.actions.act_window">
            <field name="name">Cours</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cours.base</field>
            <field name="view_mode">tree,form</field>
        </record>


    <!-- menu categories -->
    <menuitem name="Cours" id="cours_base_menu" parent="student_base_root"/>

    <!-- actions -->
    <menuitem name="Cours" id="cours_base_menu_list" parent="cours_base_menu" action="cours_base_action"/>
    </data>
</odoo>